#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

MainLayout:
	canvas:
		Color:
			rgba: .3, .3, .3, 1
		Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
	padding: 4,4,4,4
	GridLayout:
		cols: 2

		canvas:
			Color:
				rgba: .4, .4, .4, 1
			Rectangle:
			# self here refers to the widget i.e BoxLayout
				pos: self.pos
				size: self.size
		AsyncImage:
			id: albumart
			source: root.img
			size_hint: .63,1
			#on_press: root.change_source()
		GridLayout:
			rows: 6
			Label:
				font_size: 25
				font_name: "stencil"
				text: "Now Playing:"
				size_hint: 1,.5
			Label:
				font_size: 20
				id: Songinfo
				text_size: self.width, None
				height: self.texture_size[1]
				halign: 'center'
				size_hint: 1,.2

			Label:
				font_size: 11
				text: "By:"
				size_hint: 1,.25
			Label:
				font_size: 20
				id: Artistinfo
				text_size: self.width, None
				height: self.texture_size[1]
				halign: 'center'
				size_hint: 1,.3
			Label:
				font_size: 11
				text: "Off the album:"
				size_hint: 1,.25
			Label:
				font_size: 20
				id: Albuminfo
				text_size: self.width, None
				height: self.texture_size[1]
				halign: 'center'
				size_hint: 1,.7
			






